<h1>Listing games</h1>

<table>
  <tr>
    <th>Current player</th>
    <th>Board</th>
    <th>Userwin</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <% if game.winner_id %>
      <td><%= find_winner_name(game.winner_id) %></td>
    <% end %>
    <td><%#= game.board %></td>
    <td><%#= game.userwin %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%#= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

